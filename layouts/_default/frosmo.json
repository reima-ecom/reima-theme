{{- $feed := newScratch -}}
{{- $feed.Set "products" slice -}}
{{- $pages := where .Site.RegularPages "Section" "products" -}}

{{- range $pages -}}

{{- $images := slice }}
{{- range .Resources.ByType "image" }}
{{- $images = $images | append (.Resize "750x").Permalink }}
{{- end }}

{{- $feed.Add "products" (dict
  "id" .File.ContentBaseName
  "name" .Title
  "category" ""
  "brand" "Reima"
  "price" .Params.price
  "priceOrig" .Params.price
  "compareAtPrice" .Params.compareAtPrice
  "url" .Permalink
  "images" $images
  "stock" 1
) -}}

{{- end -}}

{{- $feed.Get "products" | jsonify -}}
